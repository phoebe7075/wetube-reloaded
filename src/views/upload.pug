extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST") 
        input(name="title", placeholder="Title", required, type="text", maxlength=60)
        input(name="description", placeholder="Description", required, type="text", maxlength=500)
        input(name="hashtags", placeholder="Hashtags, separated by comma", type="text")
        input(type="submit", value="Upload Video")