doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css") 
    body 
        header 
            if fakeUser.loggedIn 
                smaill hello #{fakeUser.username}.
            nav 
                ul 
                    if fakeUser.loggedIn 
                        li 
                            a(href="/logout") LogOut 
                    else 
                        li 
                            a(href="/login") Login 
            h1=pageTitle /* 다른 text와 같이 쓰지 않으면 이런식으로 표현 가능 */
        main 
            block content
    include partials/footer.pug